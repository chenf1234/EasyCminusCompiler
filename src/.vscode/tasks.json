{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++.exe build active file",
        "command": "C:/mingw64/bin/g++.exe",
        "args": ["-g", "${workspaceFolder}\\*.cpp", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
        "options": {
          "cwd": "C:/mingw64/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }